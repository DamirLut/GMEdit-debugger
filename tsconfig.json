{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "stripInternal": true,
    "declaration": false,
    "outDir": "./dist",
    "lib": ["es2015", "dom"],
    "moduleResolution": "Node",
    "esModuleInterop": true
  },
  "include": ["src/**/*"]
}
